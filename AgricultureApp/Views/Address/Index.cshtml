@using EntityLayer.Concrete
@model List<Address>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Anasayfa Adres Alanı</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered table-striped text-center">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Açıklama1</th>
                            <th>Açıklama2</th>
                            <th>Açıklama3</th>
                            <th>Açıklama4</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td>@x.AddressID</td>
                                <td>@x.Descp1</td>
                                <td>@x.Descp2</td>
                                <td>@x.Descp3</td>
                                <td>@x.Descp4</td>
                                <td>
                                    <a class="btn btn-outline-success" href="/Address/EditAddress/@x.AddressID">Update</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

