@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="zxx">
<head>
    <title>Admin Girişi</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="~/snow-login-form-starter/css/style.css" type="text/css" media="all" />
</head>
<body>
    <section class="w3l-login">
        <div class="overlay">
            <div class="wrapper">
                <div  class="logo">
                    <a style="" class="brand-logo" href="index.html">Hoş Geldin</a>
                    <p style="color:white;font-weight:bolder" >AgricultureApp Admin Paneli</p>
                </div>
                <div class="form-section">
                    <h3>Giriş Yap</h3>
                    <br />
                    <form action="#" method="post" class="signin-form">
                        <div class="form-input">
                            <input type="text" placeholder="Kullanıcı Adı" required="" autofocus>
                        </div>
                        <div class="form-input">
                            <input type="password" placeholder="Şifre" required="">
                        </div>
                        <label class="check-remaind">
                            <input type="checkbox">
                            <span class="checkmark"></span>
                            <p class="remember">Beni Hatırla</p>
                        </label>
                        <button type="submit" class="btn btn-primary theme-button mt-4">Giriş</button>
                    </form>
                </div>
            </div>
        </div>
        <div id='stars'></div>
        <div id='stars2'></div>
        <div id='stars3'></div>
    </section>
</body>
</html>