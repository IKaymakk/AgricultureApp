@using EntityLayer.Concrete
@model List<Image>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Ekip Üyeleri</h4>
            <div class="table-responsive">
                <table class="table table-striped text-center">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Görsel Ön İzleme</th>
                            <th>Görsel Başlığı</th>
                            <th>Görsel Açıklaması</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td>@x.ImageID</td>
                                <td> <img src="@x.ImagePath" style="width:100px;height:70px;border-radius:10px" /></td>
                                <td>@x.Title</td>
                                <td>@x.Description</td>
                                <td>
                                    <a class="btn btn-outline-danger" href="/Image/DeleteImage/@x.ImageID">Sil</a>
                                </td>
                                <td>
                                    <a class="btn btn-outline-success" href="/Image/EditImage/@x.ImageID">Düzenle</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <a class="btn btn-info" href="/Image/AddImage">Yeni Görsel Ekle</a>
    </div>
</div>

