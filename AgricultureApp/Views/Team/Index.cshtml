@using EntityLayer.Concrete
@model List<Team>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Ekip Üyeleri</h4>
            <div class="table-responsive">
                <table class="table table-striped text-center">
                    <thead>
                        <tr>
                            <th>
                                Personel Resmi
                            </th>
                            <th>
                                Personel Adı
                            </th>
                            <th>
                                Personel Görevi
                            </th>
                            <th>
                                Sil
                            </th>
                            <th>
                                Düzenle
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td class="py-1"><img src="@x.ImageUrl" alt="image" /></td>
                                <td>@x.PersonName</td>
                                <td>@x.Title</td>
                                <td>
                                    <a class="btn btn-outline-danger" href="/Team/DeleteTeam/@x.TeamID">Sil</a>
                                </td>
                                <td>
                                    <a class="btn btn-outline-success" href="/Team/EditTeam/@x.TeamID">Düzenle</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <a class="btn btn-info" href="/Team/AddTeam">Yeni Personel Ekle</a>
    </div>
</div>


