@model EntityLayer.Concrete.Admin

@{
    ViewData["Title"] = "AddAdmin";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div style="width:100%" class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4>Yetkili Ekle</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputUsername1">Admin Kullanıcı Adı</label>
                    <br />
                    <input asp-for="Username" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="exampleInputUsername1">Şifre</label>
                    <br />
                    <input asp-for="Password" class="form-control" type="password" />
                </div>
                <button class="btn btn-outline-success">Kaydet</button>
                <a href="/Admin/Index" class="btn btn-light">Vazgeç</a>
            </form>
        </div>
    </div>
</div>

