@using EntityLayer.Concrete
@model List<Admin>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yetkili Tablosu</h4>
            <div class="table-responsive">
                <table class="table table-striped text-center">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Kullanıcı Adı
                            </th>
                            <th>
                                Sil
                            </th>
                            <th>
                                Düzenle
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td>@x.AdminID</td>
                                <td>@x.Username</td>
                                <td>
                                    <a class="btn btn-outline-danger" href="/Admin/DeleteAdmin/@x.AdminID">Sil</a>
                                </td>
                                <td>
                                    <a class="btn btn-outline-success" href="/Admin/EditAdmin/@x.AdminID">Düzenle</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <a class="btn btn-info" href="/Admin/AddAdmin">Yetkili Ekle</a>
    </div>
</div>

