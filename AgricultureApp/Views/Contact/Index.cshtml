@using EntityLayer.Concrete
@model List<Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesajlar</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered table-striped text-center">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Kimden</th>
                            <th>Mesaj</th>
                            <th>Mail Adresi</th>
                            <th>Tarih</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td>@x.ContactID</td>
                                <td>@x.Name</td>
                                <td>
                                    @if (x.Message.Length > 33)
                                    {
                                        <p>@x.Message.Substring(0,32)<a>...</a></p>
                                    }
                                    else
                                    {
                                        @x.Message
                                    }
                                </td>
                                <td>@x.Mail</td>
                                <td>@x.Date.ToShortDateString()</td>
                                <td>
                                    <a class="btn btn-outline-danger" href="/Contact/DeleteMessage/@x.ContactID">Sil</a>
                                    <a class="btn btn-outline-success" href="/Contact/MessageDetails/@x.ContactID">Mesaja Git</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


