@model AgricultureApp.Models.ViewModels.ServiceAddViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div style="width:100%" class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputUsername1">Servis Başlığı</label>
                    <input asp-for="Title" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Servis Açıklaması</label>
                    <input asp-for="Description" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Servis Resmi</label>
                    <input asp-for="Image" class="form-control" />
                </div>
                <button class="btn btn-outline-success">Kaydet</button>
                <a href="/Service/Index" class="btn btn-light">Vazgeç</a>
            </form>
        </div>
    </div>
</div>
