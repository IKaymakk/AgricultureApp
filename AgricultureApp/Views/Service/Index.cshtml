@using EntityLayer.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hizmet Listesi</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered table-striped text-center">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Hizmet Adı</th>
                            <th style="width:500px">Hizmet Açıklaması</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td>@x.ServiceId</td>
                                <td>@x.ServiceTitle</td>
                                <td>@x.ServiceDescription</td>
                                <td>
                                    <a class="btn btn-outline-danger" href="/Service/DeleteService/@x.ServiceId">Delete</a>
                                    <a class="btn btn-outline-success" href="/Service/EditService/@x.ServiceId">Update</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
        <a class="btn btn-info" href="/Service/AddService">Yeni Hizmet Ekle</a>
    </div>
</div>

















