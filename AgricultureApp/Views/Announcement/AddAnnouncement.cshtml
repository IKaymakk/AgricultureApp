@model EntityLayer.Concrete.Announcement
@{
    ViewData["Title"] = "AddAnnouncement";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div style="width:100%" class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputUsername1">Duyuru Başlığı</label>
                    <input asp-for="Title" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Duyuru Açıklaması</label>
                    <textarea cols="20" rows="10"  asp-for="Description" class="form-control"></textarea>
                </div>
                <button class="btn btn-outline-success">Kaydet</button>
                <a href="/Announcement/Index" class="btn btn-light">Vazgeç</a>
            </form>
        </div>
    </div>
</div>


