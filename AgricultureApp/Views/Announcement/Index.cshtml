@using EntityLayer.Concrete
@model List<Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Listesi</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered table-striped text-center">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Duyuru Başlığı</th>
                            <th>Durum</th>
                            <th>Duyuru Tarihi</th>
                            <th>Düzenle</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            string text2 = "";
                            string text = "";
                            string color = "";
                            string color2 = "";
                            switch (x.Status)
                            {
                                case true:
                                    text = "Pasif Yap";
                                    text2 = "Aktif Duyuru";
                                    color = "btn btn-outline-warning";
                                    color2 = "btn btn-success";
                                    break;
                                case false:
                                    text = "Aktif Yap";
                                    text2 = "Pasif Duyuru";
                                    color = "btn btn-outline-success";
                                    color2 = "btn btn-warning";
                                    break;
                            }


                            <tr>
                                <td>@x.AnnouncementID</td>
                                <td>@x.Title</td>
                                <td><span style="border-radius:99px" class="badge @color2">@text2</span></td>
                                <td>@x.Date.ToShortDateString()</td>
                                <td>
                                    <a class="btn btn-outline-danger" href="/Announcement/DeleteAnnouncement/@x.AnnouncementID">Sil</a>
                                    <a class="btn btn-outline-success" href="/Announcement/EditAnnouncement/@x.AnnouncementID">Güncelle</a>
                                </td>
                                <td>
                                    <a class="btn @color" href="/Announcement/ChangeAnnouncementStatus/@x.AnnouncementID">@text</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <a class="btn btn-info" href="/Announcement/AddAnnouncement">Yeni Duyuru Ekle</a>
    </div>
</div>


