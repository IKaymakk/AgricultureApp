@using EntityLayer.Concrete
@model List<Team>
<div class="team" id="team">
    <div class="container">
        <h3 class="tittle">Ekibimiz</h3>
        <p class="heading-btm-w3ls">Tüm Bu İşlerin Ucunda Kimler Var ?</p>
        <div class="wthree_team_grids">
            @foreach (var x in Model)
            {
                <div class="col-md-3 wthree_team_grid">
                    <div class="hovereffect">
                        <img src="@x.ImageUrl" alt=" " class="img-responsive" />
                        <div class="overlay">
                            <div class="rotate">
                                <p class="group1">
                                    <a href="@x.LinkedInURL">
                                        <i class="fa fa-linkedin"></i>
                                    </a>
                                    <a href="">
                                        <i class="fa fa-facebook"></i>
                                    </a>
                                </p>
                                <hr>
                                <hr>
                                <p class="group2">
                                    <a href="@x.InstagramURL">
                                        <i class="fa fa-instagram"></i>
                                    </a>
                                    <a href="">
                                        <i class="fa fa-whatsapp"></i>
                                    </a>
                                </p>
                            </div>
                        </div>
                    </div>
                    <h4>@x.PersonName</h4>
                    <p>@x.Title</p>
                </div>
            }
            <div class="clearfix"> </div>
        </div>
    </div>
</div>
