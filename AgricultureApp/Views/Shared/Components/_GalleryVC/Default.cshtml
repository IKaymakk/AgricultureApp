@using EntityLayer.Concrete
@model List<Image>
<div class="gallery" id="gallery">
    <div class="container">
        <h3 class="tittle">Galeri</h3>
        <p class="heading-btm-w3ls">Türkiyenin Dört Bir Yanından Çalışmalarımıza Ait Görseller</p>
        <div class="agile_gallery_grids w3-agile">
            <ul class="clearfix demo">
                @foreach (var x in Model)
                {
                    <li>
                        <div class="gallery-grid1">
                            <img style="width:265px;height:160px" src="@x.ImagePath" alt=" " class="img-responsive" />
                            <div class="p-mask">
                                <h4><span>@x.Title</span></h4>
                                <p>@x.Description</p>
                            </div>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
